<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@mipmap/bg_homepage_left_drawer"
    android:layout_height="match_parent"
    tools:context="com.zed.trips.LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:id="@+id/imageView"
            android:clickable="true"
            android:src="@drawable/cancel_press"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_hello"
            android:layout_gravity="center_horizontal|top"
            android:textSize="30sp"
            android:textColor="@color/White"
            android:layout_marginTop="58dp"
            android:layout_below="@+id/imageView"
            android:layout_centerHorizontal="true"
            android:id="@+id/textView" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/ll"
            android:layout_below="@+id/textView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="52dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="?android:attr/listDivider"
                android:layout_weight="1"
                android:src="@drawable/im_login_more_sns_qq_press" />

            <View
                android:layout_width="1px"
                android:layout_height="fill_parent"
                android:background="@color/White"
                />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:src="@drawable/im_login_more_sns_sina_press" />

            <View
                android:layout_width="1px"
                android:layout_height="fill_parent"
                android:background="@color/White"
                />
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:src="@drawable/im_login_more_sns_wx_press" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll"
            android:id="@+id/ll2"
            android:orientation="horizontal">

            <View
                android:layout_height="1px"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:background="@color/White"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                />
            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/use_account_login"
                />

            <View
                android:layout_height="1px"
                android:layout_width="match_parent"
                android:background="@color/White"
                android:layout_marginTop="30dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_below="@+id/ll2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:layout_width="189dp"
                android:layout_height="wrap_content"
                android:background="@drawable/login_corner"
                android:text="使用手机号码登录"/>

            <Button
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:layout_width="189dp"
                android:layout_height="wrap_content"
                android:background="@drawable/login_corner"
                android:text="使用手机号码登录"/>

        </LinearLayout>


    </RelativeLayout>


</FrameLayout>
